import java.util.Scanner;
public class Arraypractice{
     public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter the amount of numbers:");
		int num = sc.nextInt();
		System.out.print("Enter " + num +" values :");
		double[] myList = new double [num];
		for (int i = 0; i < num; i++)
			 myList[i] = sc.nextDouble();
		double min = myList[0];
		int x=0;
		for (int i = 1; i < myList.length; i++) {
		    if (myList[i] <= min) {
		    	min = myList[i];
		    	x = i;}
		    }
		    System.out.print("The smallest value is " +min +" at index" +x + ".");
		    
		    
		}
	}
